    "cz-git": "^1.7.1",
    "father": "^4.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.6.9"
