{
  "name": "@pingtou/electron-ipc",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "author": "bijinfeng",
  "main": "index.js",
  "scripts": {
    "build": "pnpm tsc",
    "dev": "pnpm build --watch",
    "format": "prettier --write .",
    "prepare": "husky install",
